{
  "manifest_version": 2,
  "name": "Atomic to Lichess",
  "version": "0.9.0",
  "description": "Send Chess.com variant games to Lichess analysis with one click.",
  "author": "Otis Peterson",
  "homepage_url": "https://github.com/otisp/atomic-chess-analysis",

  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "https://www.chess.com/*",
    "https://lichess.org/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://www.chess.com/variants/atomic/game/*"],
      "js": [
        "src/shared/constants.js",
        "src/shared/dom-utils.js",
        "src/shared/pgn-validator.js",
        "src/shared/notifications.js",
        "src/content_chesscom.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://lichess.org/paste"],
      "js": [
        "src/shared/constants.js",
        "src/shared/dom-utils.js",
        "src/shared/notifications.js",
        "src/content_lichess.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "atomic-to-lichess@otisp.github.io",
      "strict_min_version": "57.0"
    }
  }
}
